extends layout

block content
    .container.mt-4
      br
      br
      if errors
      each error, i in errors
         div(class="alert alert-danger") #{error.msg}
      div.row
         div.col-md-12.col-lg-12.col-sm-12.mt-2
            h1 #{title}
         
            form(method='POST', action='http://localhost:3000/users/update_profile')
               #form-group
                  label Your Name:
                  input.form-control(name='name', type='text', value=user.name)
               #form-group
                  label Email Address:
                  input.form-control(name='username', type='text', value=user.username readonly)
                  input.form-control(name='password', type='hidden', value=user.password)
                  
               #form-group
                  label Cellphone Number:
                  input.form-control(name='cellphoneNumber', type='text', value=user.cellphoneNumber)
               #form-group
                  label Address:
                  input.form-control(name='homeAddress', type='text', value=user.homeAddress)
                  input.form-control(name='gender', type='hidden', value=user.gender)
               
           
               br
               input.btn.btn-primary(type='submit',value='Update Profile')   
