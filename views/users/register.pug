extends user_layout

block content
    .container
        br
        if errors
        each error, i in errors
            div(class="alert alert-danger") #{error.msg}
        div.row
            div.col-md-10.col-lg-10.offset-md-1.offset-lg-1
                div.row
                   div.col-md-6.col-lg-6.offset-md-3.offset-lg-3
                        div.user-sign-in 
                            h2.text-center Register
                            form(method='POST', action='http://localhost:3000/users/register')
                                #form-group 
                                    label Name
                                    input.form-control(name='name', type='text', placeholder='Enter your name' required)
                                #form-group 
                                    label Email Address
                                    input.form-control(name='username', type='text', placeholder='Enter your email address' required)
                                #form-group 
                                    label Home Address
                                    input.form-control(name='homeAddress', type='text', placeholder='Enter your home address' required)
                                #form-group 
                                    label Cellphone Number
                                    input.form-control(name='cellphoneNumber', type='text', placeholder='Enter your cellphone number' required)
                                #form-group 
                                    label Gender    
                                    select.form-control(name='gender', type='text')
                                        option(value = '') Select Gender
                                        option(value='Male') Male
                                        option(value='Female') Female
                                #form-group 
                                    label Password
                                    input.form-control(name='password', type='password', placeholder='Please enter a password' required)
                                #form-group 
                                    label Confirm Password
                                    input.form-control(name='password2', type='password', placeholder='Please confirm your password' required)
                                br
                                input.btn.btn-info.btn-block(type='submit',value='Register')
                                a.btn.btn-secondary.btn-block(href='/login') Login
                                
    