extends user_layout

block content
    .container
        div.row
            div.col-md-6.col-lg-6.offset-md-3.offset-lg-3.mt-5.text-center
                != messages('message', locals) 
        div.row
            div.col-md-10.col-lg-10.offset-md-1.offset-lg-1.mt-5
                div.row
                   div.col-md-6.col-lg-6.offset-md-3.offset-lg-3
                        div.user-sign-in 
                            h2.text-center Login
                            form(method='POST', action='http://localhost:3000/login')
                                #form-group 
                                    label Email Address
                                    input.form-control(name='username', type='email' required)
                                #form-group 
                                    label Password
                                    input.form-control(name='password', type='password' required)
                                br
                                input.btn.btn-primary.btn-block(type='submit',value='Login') 
                                a.btn.btn-secondary.btn-block(href='/users/register') Register 
    