extends layout

block content
    .container.mt-4
      br
      br
      if errors
      each error, i in errors
         div(class="alert alert-danger") #{error.msg}
      div.row
         div.col-md-12.col-lg-12.col-sm-12.mt-2
            h1 #{title}
         
            form(method='POST', action='http://localhost:3000/adoptions/application')
               #form-group
                  label Your Name:
                  input.form-control(name='userName', type='text' value=user.name readonly)
               #form-group
                  label Email Address:
                  input.form-control(name='userEmail', type='text' value=user.username readonly)
                  input(name='userId', type='hidden' value=user._id)
               #form-group
                  label Cellphone Number
                  input.form-control(name='cellphoneNumber', type='text', value=user.cellphoneNumber readonly)
               #form-group
                  label Pet Name
                  input.form-control(type='text', value=pet.petName readonly)
               #form-group
                  label Pet Id: (We have retrieved this for you)
                  input.form-control(name='petId', type='text' value=pet._id readonly)
                  input.form-control(name='applicationId', type='hidden' value=pet._id)
               #form-group
                  label Motivation:
                  textarea.form-control(name='motivation', type='text')
           
               br
               input.btn.btn-primary(type='submit',value='Submit Application')   
