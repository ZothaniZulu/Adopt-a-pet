extends layout

block content
    .container.mt-4
    div.row
        div.col-md-12.col-lg-12.col-sm-12.mt-5
            h1.text-center #{title}

    div.row
        div.col-md-8.col-sm-8.col-lg-8.offset-2
                div.card
                    div.card-header
                        h4.text-center=user.name
                    div.card-body
                        h5.text-center Email Address: #{user.username}
                        h5.text-center Cellphone number: #{user.cellphoneNumber}
                        h5.text-center Gender: #{user.gender}
                        h5.text-center Home Address: #{user.homeAddress}
                        a.btn.btn-primary.btn-block(href='/users/edit_profile/'+user._id) Edit Profile
                        
                        
   
